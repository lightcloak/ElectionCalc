<UserControl x:Class="ElectionCalc.Views.VoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectionCalc.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Green">
        <StackPanel Margin="10">
            <TextBlock x:Name="txtBlk" TextWrapping="Wrap" Text="Welcome" />
            <StackPanel x:Name="List" Margin="0,10"/>
            <Button x:Name="btnVote" Content="Vote for selected candidate" Margin="0" />
            <Button x:Name="btnBack" Content="Go Back" Margin="0,10" />
        </StackPanel>
    </Grid>
</UserControl>
