<Window x:Class="ElectionCalc.Summary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectionCalc"
        mc:Ignorable="d"
        Title="Summary for Election Voting Program" Width="520" SizeToContent="Height" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="10" >
            <TextBlock x:Name="txtBlk" TextWrapping="Wrap" Text="Bellow is the summary of current voting poll." Margin="10" />
            <StackPanel x:Name="List" Margin="10" Width="470"/>
            <Button x:Name="btnBack" Content="Go Back" Click="btnBack_Click" Margin="10"/>
        </StackPanel>
       

    </Grid>
</Window>
